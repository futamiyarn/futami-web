{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": ["app/**/*.d.ts", "app/**/*.ts", "app/**/*.svelte", "app/**/*.js"],
  "exclude": ["app/svelte.config.js", "app/build.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
